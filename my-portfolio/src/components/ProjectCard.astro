---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'
import { cn } from '@/utils'

const {
	as,
	class: className,
	href,
	heading,
	subheading,
	imagePath,
	altText,
	target,
	rel
} = Astro.props

const Tag = (as ?? (href ? 'a' : 'div')) as any

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*.{jpeg,jpg,png,gif,webp}')
if (!images[imagePath])
	throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`)
---

<Tag
	class={cn(
		className,
		'flex flex-col gap-y-3 rounded-2xl border border-border bg-primary-foreground',
		href && 'transition-all hover:border-foreground/25 hover:shadow-sm cursor-pointer'
	)}
	href={href}
	target={target}
	rel={rel}
>
	<Image
		src={images[imagePath]()}
		alt={altText}
		class='h-48 w-full rounded-2xl rounded-bl-none rounded-br-none object-cover'
		loading='eager'
	/>
	<div class='flex flex-col gap-y-0.5 px-5 py-4'>
		<h1 class='text-lg font-medium'>{heading}</h1>
		<h2 class='text-muted-foreground'>{subheading}</h2>
	</div>

	<slot />
</Tag>
